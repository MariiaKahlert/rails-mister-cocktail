<div class="container container-cocktails">
    <div class="row row-container">
      <% @cocktails.each do |c| %>
      <div class="col-sm-12 col-md-4">
        <%= link_to cocktail_path(c), class: "link-for-card" do || %>
          <div class="card-category d-flex justify-content-center align-items-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path c.photo.key %>')">
            <h2><%= c.name %></h2>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
</div>

